<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SimWeb</title>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg custom-navbar w-100">
            <div class="container-fluid d-flex align-items-center justify-content-start">
                <!-- Tytuł strony -->
                <span class="navbar-brand">SimWeb</span>
                <!-- Linki nawigacyjne -->
                <ul class="navbar-nav d-flex flex-row ms-3">
                    <li class="nav-item">
                        <a class="nav-link @(ViewData["Title"]?.ToString() == "SimWeb" ? "active" : "clickable-link")" href="/">Informacje</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewData["Title"]?.ToString() == "Symulacja" ? "active" : "clickable-link")" href="/Simulation">Symulacja</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
    <footer class="footer">
        <div class="footer-content">
            ©2025 Wojciech Pich
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
